{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "lib/**/*.ts",
    "lib/**/*.vue",
    "src/*",
    "types/global.d.ts",
    "vite.config.ts",
    "env.d.ts"
  ],
  "exclude": ["lib/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@ah/*": ["./lib/*"]
    },
    "verbatimModuleSyntax": false // 不限制必须导入 type
  }
}
